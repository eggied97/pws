<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:id="@+id/ipSelectLayout">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/etIpAdress"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:hint="ip-adres" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="connect"
            android:id="@+id/btnConnect"
            android:layout_below="@+id/etIpAdress"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:id="@+id/controlsLayout">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/etTau"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/etKp"
            android:layout_alignStart="@+id/etKp"
            android:layout_marginTop="76dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/etKp"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/btnStart"
            android:layout_marginBottom="44dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />



        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Values"
            android:id="@+id/btnUpdateValues"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Tau"
            android:id="@+id/textView"
            android:layout_alignBottom="@+id/etTau"
            android:layout_toLeftOf="@+id/etTau"
            android:layout_toStartOf="@+id/etTau" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="kP"
            android:id="@+id/textView2"
            android:layout_alignBottom="@+id/etKp"
            android:layout_toLeftOf="@+id/etKp"
            android:layout_toStartOf="@+id/etKp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:text="Move"
            android:id="@+id/btnSetSetpoint"
            android:layout_marginBottom="31dp"
            android:layout_above="@+id/btnStart"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2"
            android:layout_alignRight="@+id/etKp"
            android:layout_alignEnd="@+id/etKp" />

    </RelativeLayout>
</LinearLayout>